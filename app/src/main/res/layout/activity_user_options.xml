<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bricks7"
    android:orientation="vertical"
    tools:context=".UserOptionsActivity">

    <Button
        android:id="@+id/ButtonShowLeaderBoard"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFEB3B"
        android:textStyle="italic"
        android:text="LEADERBOARD"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonStartGameForRegisteredUser"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="#FA2913"
        android:textStyle="bold"
        android:text="START GAME"
        android:textSize="36sp" />

    <Button
        android:id="@+id/ButtonMyDiagnosis"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="#03A9F4"
        android:text="MY DIAGNOSIS"
        android:textStyle="italic"
        android:textSize="30sp" />

</LinearLayout>