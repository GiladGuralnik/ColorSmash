<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bricks2"
    tools:context=".DiagnosisResultsActivity">

    <TextView
        android:id="@+id/textViewNameDiagnosisResults"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="The results for the diagnosis :"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="496dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewResultsDiagnosisResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewResultsDetailsDiagnosisResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewCoverDiagnosisResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonFullTestDiagnosisResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Full Test"
                android:textSize="24sp"
                android:background="#00BCD4"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/buttonFinishDiagnosisResults"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:text=" Finish"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="#E91E63"/>


</LinearLayout>