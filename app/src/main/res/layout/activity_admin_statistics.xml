<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bricks1"
    android:orientation="vertical"
    tools:context=".AdminStatisticsActivity">

    <TextView
        android:id="@+id/textViewColorblindUsers"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1"
        android:background="#9580D8FF"
        android:gravity="center"
        android:text="NUMBER OF COLORBLIND DIAGNOSED USERS :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewAverageAge"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1"
        android:background="#9580D8FF"
        android:gravity="center"
        android:text="AVERAGE AGE :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMostCommonGender"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1"
        android:background="#9580D8FF"
        android:gravity="center"
        android:text="MOST COMMON GENDER :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMostCommonColors"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginBottom="80dp"
        android:layout_weight="1"
        android:background="#9580D8FF"
        android:gravity="center"
        android:text="MOST COMMON COLOR BLINDNESS :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25sp"
        android:textStyle="bold" />


</LinearLayout>