<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bricks5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ButtonRegister"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="#F04CAF50"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/ButtonStartGame"
        android:layout_width="243dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#E9E6306F"
        android:gravity="center"
        android:text="Start Game"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ButtonLogin"
        android:layout_width="145dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#F2673AB7"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/ButtonExit"
            android:layout_width="143dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="#F2FFEB3B"
            android:text="Exit"
            android:textColor="#020202"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ButtonAdminLogin"
            android:layout_width="143dp"
            android:layout_height="65dp"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="39dp"
            android:background="#F22196F3"
            android:text="Admin Login"
            android:textColor="#020202"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>