pipeline {
    agent { docker { image 'cangol/android-gradle' } }
    environment {HOME = '/tmp'} 
    stages {
    stage('Git') {
      // Get some code from a GitHub repository
      steps{
          git 'https://github.com/GiladGuralnik/ColorSmash.git'
      }
   } 
   stage("build") {
            steps{
                echo "$USER"
                sh "chmod 777 gradlew"
                //sh "chmod a+x /android-sdk-linux/tools/android"
                // try
                sh 'chown -R jenkins:jenkins /opt/android-sdk/'
                sh './gradlew'
            }
    }
}
}

